    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Holodeck w/ default args",
            "type": "debugpy",
            "request": "launch",
            "program": "ai2holodeck/main.py",
            "console": "integratedTerminal",
            "args": [
                "--query",
                "a living room",
                "--llm_model",
                "openrouter/openai/gpt-4.1-mini"
            ]
        }
    ]
}